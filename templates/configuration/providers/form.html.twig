                    {{ form_row(form.presentation) }}
                </fieldset>
            </div>
        </div>
    </div>

    <!-- Settlement Configuration -->
    <div class="card mb-3">
        <div class="col">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0">
                            {{ 'config_provider.legend.settlementConfig' | trans }}
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card-body bg-light border-top" style="padding:1.25rem 1.5rem;">
                <fieldset>
                    {{ form_row(form.settlement) }}
                </fieldset>
            </div>
        </div>
    </div>

    <!-- Provider Configuration -->
    <div class="card mb-3">
        <div class="col ">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
