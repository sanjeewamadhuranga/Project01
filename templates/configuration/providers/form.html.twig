            </div>
            <div class="card-body bg-light border-top" style="padding:1.25rem 1.5rem;">
                <fieldset>
                    {{ form_row(form.configuration) }}
                </fieldset>
            </div>
        </div>
    </div>


    <!-- Refunds -->
    <div class="card mb-3">
        <div class="col ">
            <div class="card-header">
