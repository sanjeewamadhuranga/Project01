{% extends 'common/base.html.twig' %}

{% set title, subTitle = item|default('config_provider.addNew'|trans), null %}

{% block back_url %}
    {{ path('configuration_providers_index') }}
{% endblock %}

{% block paragraph_blocks %}
    {{ form_start(form) }}
    <!-- Provider Status -->
    <div class="card mb-3">
        <div class="col">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0">
                            {{ 'config_provider.legend.status' | trans }}
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card-body bg-light border-top" style="padding:1.25rem 1.5rem;">
                <fieldset>
                    {{ form_row(form.general) }}
                </fieldset>
            </div>
        </div>
    </div>

    <!-- Provider Logo & Icon -->
    <div class="card mb-3">
        <div class="col">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0">
                            {{  'config_provider.legend.logo&Icons' | trans }}
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card-body bg-light border-top" style="padding:1.25rem 1.5rem;">
                <fieldset>
                    {{ form_row(form.logos) }}
                </fieldset>
            </div>
        </div>
    </div>

    <!-- Provider Presentation -->
    <div class="card mb-3">
        <div class="col ">
            <div class="card-header">
