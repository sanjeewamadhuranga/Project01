                    <p class="fw-semi-bold mb-1">{{ 'config_provider.label.baseCurrency'|trans }}</p>
                </div>
                <div class="col">
                    {{ item.baseCurrency | default(commonMacros.no_data()) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-12">
                    <p class="fw-semi-bold mb-1">{{ 'config_provider.label.fxEnabled'|trans }}</p>
                </div>
                <div class="col">
