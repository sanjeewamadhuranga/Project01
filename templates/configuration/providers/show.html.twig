        <div class="row mb-3 border-top pt-1">
            <h5 class="fw-semi-bold ls mb-3 text-uppercase">{{ 'config_provider.legend.currencyLimit' | trans }}</h5>

            {% for currencyLimit in item.currencyLimits %}
            <div class="row">
                <div class="col-12 col-sm-12">
                    <p class="fw-semi-bold mb-1">{{ 'currency_limit.currency'|trans }}</p>
                </div>
                <div class="col">
                    {{ currencyLimit.currency | default(commonMacros.no_data()) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-12">
                    <p class="fw-semi-bold mb-1">{{ 'currency_limit.minimum'|trans }}</p>
