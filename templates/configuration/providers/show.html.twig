                        <p class="fw-semi-bold mb-1">{{ 'currency_limit.maximum'|trans }}</p>
                    </div>
                    <div class="col">
                        {{ currencyLimit.max | default(commonMacros.no_data()) }}
                    </div>
                </div>
            {% endfor %}
        </div>

