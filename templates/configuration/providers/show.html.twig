                </div>
                <div class="row">
                    <div class="col-12 col-sm-12">
                        <p class="fw-semi-bold mb-1">{{ 'config_provider.label.nativeQrCodeSupport'|trans }}</p>
                    </div>
                    <div class="col">
                        {{ commonMacros.booleanLabel(item.nativeQrCodeSupport) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12">
                        <p class="fw-semi-bold mb-1">{{ 'config_provider.label.secondaryAcquiringCdeUrl'|trans }}</p>
                    </div>
                    <div class="col">
                        {{ item.secondaryAcquiringCdeUrl | default(commonMacros.no_data()) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3 border-top pt-1">
            <h5 class="fw-semi-bold ls mb-3 text-uppercase">{{ 'config_provider.legend.refunds' | trans }}</h5>
            <div class="col-log col-xxl-6">
                <div class="row">
                    <div class="col-12 col-sm-12">
                        <p class="fw-semi-bold mb-1">{{ 'config_provider.label.refundWindowDays'|trans }}</p>
                    </div>
                    <div class="col">
                        {{ commonMacros.booleanLabel(item.preSelectScanMode) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-12">
                        <p class="fw-semi-bold mb-1">{{ 'config_provider.label.paymentRefund'|trans }}</p>
                    </div>
                    <div class="col">
                        {{ commonMacros.booleanLabel(item.canRefundIfConfirmed) }}
                    </div>
                </div>
            </div>
            <div class="col-log col-xxl-6">
                <div class="row">
                    <div class="col-12 col-sm-12">
                        <p class="fw-semi-bold mb-1">{{ 'config_provider.label.paymentPartialRefund'|trans }}</p>
                    </div>
                    <div class="col">
