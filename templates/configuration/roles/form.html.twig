{% extends 'app.html.twig' %}
{% set role = item %}
{% block title %}{{ (role ? 'configuration.merchant_roles.edit' : 'configuration.merchant_roles.create')|trans }}{% endblock %}

{% block content %}
    <div class="card mb-3">
        <div class="card-header">
            <h5>
                <a href="{{ path('configuration_roles_index') }}" class="btn">
                    <span class="fas fa-arrow-left"></span>
                </a>
                {{ role ? role.name : 'configuration.merchant_roles.create'|trans }}
            </h5>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">{{ (role ? 'configuration.merchant_roles.edit' : 'configuration.merchant_roles.create')|trans }}</h5>
                </div>
            </div>
        </div>
        <div class="card-body">
            <ul class="nav nav-pills" role="tablist">
                <li class="nav-item"><a class="nav-link active" id="pill-home-tab" data-bs-toggle="tab" href="#role-configuration" role="tab" aria-controls="pill-tab-home" aria-selected="true">{{ 'config'| trans }}</a></li>
                <li class="nav-item"><a class="nav-link" id="pill-profile-tab" data-bs-toggle="tab" href="#role-permissions" role="tab" aria-controls="pill-tab-profile" aria-selected="false">{{ 'permissions'| trans }}</a></li>
            </ul>
            {{ form_start(form) }}
            <div class="tab-content p-3">
                <div class="tab-pane fade" id="role-permissions" role="tabpanel" aria-labelledby="profile-tab">
                    {{ form_row(form.permissions) }}
                </div>
                <div class="tab-pane fade show active" id="role-configuration" role="tabpanel" aria-labelledby="home-tab">
                    {{ form_row(form.name) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.companies) }}
                    {{ form_row(form.allowedPushNotifications) }}
                    {{ form_row(form.userAware) }}
                    {{ form_row(form.default) }}
                </div>
            </div>
            {{ form_rest(form)}}
            {{ form_errors(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
