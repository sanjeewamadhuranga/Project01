{% extends 'app.html.twig' %}

{% block content %}
    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h5>
                        <a href="{{ path('profile_2fa_get_sms') }}" class="btn">
                            <span class="fas fa-arrow-left"></span>
                        </a>
                        {{ 'security.2fa.setupTwoFactorAuth'|trans }}
                    </h5>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-3 mb-lg-0">
        <div class="bg-light card-header">
            <div class="row">
                <div class="col-md-10">
                    <div class="nav nav-pills" role="tablist">
                        <a style="padding:0.125rem 1rem;" class="btn text-success" href="{{ path('profile_2fa_get_sms') }}">
                            <em class="fas fa-check" ></em>
                            {{ 'security.2fa.tabs.providePhone'|trans }}
                        </a>

                        <a class="btn {{isSuccess ? 'text-success' : 'btn-primary'}}" style="padding:0.125rem 1rem;">
                            {% if isSuccess %} <em class="fas fa-check" ></em> {% endif %}
                            {{ 'security.2fa.tabs.confirmPhone'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white card-body">
            {% if isSuccess %}
                {{ include('profile/_successfully_enabled_2fa.html.twig') }}
            {% else %}
                <div class="w-100 w-md-75 w-xl-50">
                    <p class="text-900 fw-semi-bold text-16 mb-2"> {{ 'security.2fa.form.step2'|trans }} </p>
                    {{ form(form) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
