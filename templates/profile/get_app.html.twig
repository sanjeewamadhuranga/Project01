{% extends 'app.html.twig' %}

{% block content %}
    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h5>
                        <a href="{{ path('profile_index') }}" class="btn">
                            <span class="fas fa-arrow-left"></span>
                        </a>
                        {{ 'security.2fa.setupTwoFactorAuth'|trans }}
                    </h5>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-3 mb-lg-0">
        <div class="bg-light card-header">
            <div class="row">
                <div class="col-md-10">
                    <div class="nav nav-pills" role="tablist">
                        <a class="btn btn-primary" style="padding:0.125rem 1rem;">
                            {{ 'security.2fa.tabs.getApp'|trans }}
                        </a>

                        <a class="btn" style="padding:0.125rem 1rem;" href="{{ path('profile_2fa_enable_app') }}">
                            {{ 'security.2fa.tabs.linkApp'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white card-body">
            <div class="w-100 w-md-75 w-xl-50">
                <h4 class="text-900 mb-4">{{ 'security.2fa.getApp.title'|trans }} </h4>
                <p class="text-650 text-16 mb-4"> {{ 'security.2fa.getApp.info'|trans }} </p>
                <div class="d-flex align-items-center justify-content-between pb-3 mb-3" style="border-bottom: 3px dashed #d8e2ee">
                    <div class="d-flex align-items-center">
                        <img style="margin-left: -2.5px;" src="{{ asset('build/themes/shared/img/google_authenticator_logo.svg') }}" alt="Google Authenticator" height="55" />
                        <p class="fw-semi-bold text-900 text-16 mx-3 mb-0"> {{ 'security.2fa.getApp.googleAuthenticator'|trans }} </p>
                    </div>
                    <div class="d-flex align-items-center">
                        <a href="https://apps.apple.com/app/google-authenticator/id388497605" target="_blank" rel="noopener noreferer">
                            <img src="{{ asset('build/themes/shared/img/app_store.svg') }}" alt="App store" width="120" />
                        </a>
                        <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2" target="_blank" rel="noopener noreferrer">
                            <img src="{{ asset('build/themes/shared/img/get-it-on-google-play.svg') }}" alt="Google Play" width="140" />
                        </a>
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-between pb-3 mb-3">
                    <div class="d-flex align-items-center">
                        <img src="{{ asset('build/themes/shared/img/authy-logo.svg') }}" alt="Authy" height="50" />
                        <p class="fw-semi-bold text-900 text-16 mx-3 mb-0"> {{ 'security.2fa.getApp.authy'|trans }} </p>
                    </div>
                    <div class="d-flex align-items-center">
                        <a href="https://apps.apple.com/app/twilio-authy/id494168017" target="_blank" rel="noopener noreferrer">
                            <img src="{{ asset('build/themes/shared/img/app_store.svg') }}" alt="App store" width="120" />
                        </a>
                        <a href="https://play.google.com/store/apps/details?id=com.authy.authy" target="_blank" rel="noopener noreferrer">
                            <img src="{{ asset('build/themes/shared/img/get-it-on-google-play.svg') }}" alt="Google Play" width="140"/>
                        </a>
                    </div>
                </div>
                <p class="text-650 text-16 mb-4"> {{ 'security.2fa.getApp.alreadyHaveApp'|trans }} </p>
                <a style="padding:0.125rem 1rem;" href="{{ path('profile_2fa_enable_app') }}" class="btn btn-primary">
                    {{ 'next'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
