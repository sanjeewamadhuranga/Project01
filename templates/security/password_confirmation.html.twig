{% extends 'app.html.twig' %}

{% block title %}Provide password{% endblock %}

{% block content %}

    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h5>
                        <a href="{{ path(backUrl) }}" class="btn">
                            <span class="fas fa-arrow-left"></span>
                        </a>
                        {{ 'back'|trans }}
                    </h5>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        {{ form_start(form) }}
        <div class="card-header p-3">
            <h5>{{ 'security.confirmAction'|trans }}</h5>
        </div>
        <div class="card-body" style="padding: 1rem 1.5rem;">
            {{ form_rest(form) }}
        </div>
        <div class="card-footer text-end" style="padding: 1rem 1.5rem;">
            <button type="submit" class="btn btn-primary">{{ 'submit'|trans }}</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
